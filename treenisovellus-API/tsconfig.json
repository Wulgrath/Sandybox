{
  "version": "2.0.2",
  "conpileOnSave": false,
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": false,
    "esModuleInterop": true,
    "target": "es2019",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "removeComments": true,
    "lib": ["es2019"],
    "types": ["node", "aws-sdk"],
    "typeRoots": ["server/types"]
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "test/**/*"]
}
